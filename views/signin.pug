extends ./layout.pug
block container
	div(class="section white")
		div(class="container")
			div(class="row")
				div(class="col l6 m6 s12")
					div(class="card-panel white")
						div(class="container")
							h3(class="left-align title-eat").
								Stewp Eat
							h5(class="grey-text text-darken-1").
								El menú de tu restaurante online
							p(class="grey-text text-darken-1").
								Iniciar sesión para acceder a Stewp Eat
							form(action="" method="POST")
								div(class="row")
									div(class="input-field col s12")
										input(type="email" name="email" id="email" class="" placeholder="")
										label(for="email").
											Correo Electronico
									div(class="input-field col s12")
										input(type="password" name="password" id="password" class="" placeholder="")
										label(for="password").
											Contraseña
									button(class="btn waves-effect waves-light deep-orange darken-1" type="submit" name="action").
										Acceder #[i(class="material-icons right") send]
									div(class="col s12")
										small().
											#[br]Con #[strong Stewp Eat] podrás consultar el menú de los restaurantes, además de realizar pedidos y recomendar a tus amigos tu lugar favorito. #[a(href="/signup") Registrarme]
				div(class="col l6 m6 s12")
					div(class="card-panel white")
						div(class="container")
							h3(class="left-align title-kitchen").
								Stewp Kitchen
							h5(class="grey-text text-darken-1").
								El gestor de restaurante online
							p(class="grey-text text-darken-1").
								Iniciar sesión para acceder a Stewp Kitchen
							form(action="" method="POST")
								div(class="row")
									div(class="input-field col s12")
										input(type="email" name="email" id="email" class="" placeholder="")
										label(for="email").
											Correo Electronico
									div(class="input-field col s12")
										input(type="password" name="password" id="password" class="" placeholder="")
										label(for="password").
											Contraseña
									button(class="btn waves-effect waves-light" type="submit" name="action").
										Acceder #[i(class="material-icons right") send]
									div(class="col s12")
										small().
											#[br]Con #[strong Stewp Eat] podrás consultar el menú de los restaurantes, además de realizar pedidos y recomendar a tus amigos tu lugar favorito. #[a(href="/signup") Registrarme]